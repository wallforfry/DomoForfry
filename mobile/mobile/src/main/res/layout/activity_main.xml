<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bouton"
        android:id="@+id/Button"
        android:nestedScrollingEnabled="false"
        android:layout_alignTop="@+id/webView"
        android:layout_alignLeft="@+id/text"
        android:layout_alignStart="@+id/text" />

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/webView"
        android:visibility="invisible"
        android:layout_below="@+id/switchStatus"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/switchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <Switch
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oeuf"
            android:tag="6"
            android:onClick="action"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maroc"
            android:id="@+id/switch2"
            android:layout_marginBottom="20dp"
            android:onClick="action"
            android:tag="2" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lampes Miroir"
            android:id="@+id/switch3"
            android:onClick="action"
            android:tag="7"
            android:layout_marginBottom="20dp"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fleurs"
            android:id="@+id/switch4"
            android:onClick="action"
            android:layout_marginBottom="20dp"
            android:tag="17" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lampe Rouge"
            android:id="@+id/switch5"
            android:onClick="action"
            android:layout_marginBottom="20dp"
            android:tag="4" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Liseuse"
            android:id="@+id/switch6"
            android:onClick="action"
            android:layout_marginBottom="20dp"
            android:tag="5" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LED Chrome"
            android:id="@+id/switch7"
            android:onClick="action"
            android:layout_marginBottom="20dp"
            android:tag="3" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Table Cuisine"
            android:id="@+id/switch8"
            android:onClick="action"
            android:layout_marginBottom="20dp"
            android:tag="48" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Led Cuisine"
            android:id="@+id/switch9"
            android:onClick="action"
            android:layout_marginBottom="20dp"
            android:tag="40" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>






